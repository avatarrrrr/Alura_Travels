<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Theme. -->
    <style name="Theme.AluraTravels.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/grey</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.AluraTravels</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor" >@color/purple_600</item>
        <item name="android:navigationBarColor">@color/purple_600</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>